        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
        integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.4.0/socket.io.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <title>항해99 4기 3주차 개인 프로젝트</title>

    <style>
        .posts {
            cursor: pointer
        }
        
        .card {
            cursor: pointer;
        }

        html {
            overflow: auto;
        }
    </style>

    <script>

         $(document).ready(function () {
             if (localStorage.getItem("token")) {
                 $('#login').hide()
                 $('#logout').show()
             } else {
                 $('#post').hide()
             }
            get_posts()
        })

        function get_posts() {
            $('#postlist').empty()
            $.ajax({
                type: "GET",
                url: `/api/posts`,
                data: {},
                success: function (response) {
                    let posts = response["posts"]

                    for (let i = 0; i < posts.length; i++) {
                        const postId = posts[i]['postId']
                        const name = posts[i]['name']
                        const title = posts[i]['title']
                        const date = moment(posts[i]['date']).format('YYYY-MM-DD HH:mm')
                        make_post(postId, name, title, date)
                    }
                }
            })
        }

        function make_post(postId, name, title, date) {
            let temp_html = `<tr class ="posts" onclick = "window.location.href = '/content?postId=${postId}'">
                                <td>${name}</td>
                                <td>${title}</td>
                                <td>${date}</td>
                            </tr>`
            $('#postlist').append(temp_html)
        }

        function login() {
            window.location.href = "/login"
        }
        function writing() {
            window.location.href = "/write"
        }
        function logout() {
            localStorage.clear();
            window.location.href = "/login"
        }

    </script>
</head>
  <body>
    <div>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">작성자명</th>
              <th scope="col">제목</th>
              <th scope="col">날짜</th>
            </tr>
          </thead>
          <tbody id="postlist">
            <tr>
              <td>이름</td>
              <td>제목</td>
              <td id="date">날짜</td>
            </tr>
          </tbody>
        </table>
        <button id="post" type="button" class="btn btn-primary" onclick="writing()">글쓰기</button>
        <button id="login" type="button" class="btn btn-outline-dark" onclick="login()">로그인</button>
        <button id="logout" type="button" class="btn btn-outline-dark" onclick="logout()" style="display: none;">로그아웃</button>
    </div>
  </body>
</html>