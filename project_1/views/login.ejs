    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.4.0/socket.io.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
    <title>항해99 4기 3주차 개인 프로젝트</title>

    <style>
        .Box {
            width: 500px;
            margin: auto;
        }
    </style>
    <script>
      if (localStorage.getItem("token")) {
          alert("이미 로그인이 되어있습니다. 게시글로 이동합니다.");
          window.location.replace("/main");
      }
      // 로그인 후 로그인 페이지에 들어오게 되면 브라우저에서 받은 토큰을 이용해서
      // alert 내용을 띄워준 뒤 메인페이지 경로로 이동하게 해줬다.

      function login() {
        
        let username = $("#username").val();
        let password = $("#password").val();
        // 데이터 값에 담을 변수 할당

        $.ajax({
          type: "POST",
          url: "/api/login",
          data: {
            username: username,
            password: password,
          },
          success: function (response) {
            localStorage.setItem("token", response.token); // success후 토큰을 set해줘서 메인 페이지로 이동
            window.location.href = "/main"
          },
          error: function (error) {
            alert(error.responseJSON.errorMessage);
          },
        });
      }
    </script>
</head>
  <body>
    <div class="Box">
        <div class="form-group">
          <label for="username">아이디</label>
          <input type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="아이디를 입력해주세요.">
        </div>
        <div class="form-group">
          <label for="password">비밀번호</label>
          <input type="password" class="form-control" id="password" placeholder="비밀번호를 입력해주세요.">
        </div>
        <button type="submit" class="btn btn-outline-dark"onclick="login()">로그인</button>
        <button type="button" class="btn btn-outline-dark" onclick="location.href='/register'">회원가입</button>
        <button type="button" class="btn btn-outline-dark" onclick="location.href='/main'">메인페이지</button>
    </div>
  </body>
</html>